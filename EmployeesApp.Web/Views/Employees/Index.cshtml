@model EmployeesApp.Web.Models.Employee[]
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers


<!DOCTYPE html>
    <html>
    <head>
        <title></title>
    </head>
    <body>

        <h2>Employees</h2>
        Count: <strong>@Model.Length</strong>

    <ul>
        @foreach (var employee in Model)
        {
            <li>
                <a asp-controller="employees" asp-action="details" asp-route-id="@employee.Id">@employee.Name</a>
                @* <a href="/details/@employee.Id">@employee.Name</a> *@
            </li>
        }
    </ul>
    <a asp-controller="employees" asp-action="create">Add Employee</a>

    
    </body>
    </html>
