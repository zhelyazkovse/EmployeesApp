@model EmployeesApp.Web.Models.Employee
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<!DOCTYPE html>
    <html>
    <head>
        <title>Employees</title>

    </head>
    <body>
        <form asp-controller="employees" asp-action="create">
            <label asp-for="Name"></label>
            <input asp-for="Name"/><br />
            <span asp-validation-for="Name"></span>

            <label asp-for="Email"></label>
            <input asp-for="Email" /><br />
            <span asp-validation-for="Email"></span>

            <input type="submit" style="width: 300px;" value="Add" />
        </form>
        <a asp-controller="employees" asp-action="index">Back to Home</a>
    </body>
    </html>